 <% if user_signed_in? %>
<h1>New article</h1>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :writer %><br>
    <%= f.text_field :writer, :value => current_user.email %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', articles_path %>

<% else %>
<%= render 'headbar' %>
<h1>Please login first.</h1>
<%= link_to 'Back', articles_path %>
<% end %>